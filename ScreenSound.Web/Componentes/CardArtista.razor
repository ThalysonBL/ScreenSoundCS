<MudCard>
    <MudCardMedia Image="@Imagem"></MudCardMedia>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">@Artista!.Nome</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudText Typo="Typo.body2">@Artista!.Bio</MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Color="Color.Warning"
            Variant="Variant.Outlined"
            Href=@($"/EditarArtista/{Artista!.Nome}")>
                Detalhes
        </MudButton>
    </MudCardActions>
</MudCard>

@code {
    [Parameter]
    public ArtistaResponse? Artista { get; set; }
    
    [Inject]
    private IConfiguration Configuration { get; set; } = null!;
    
    public string? Imagem { get; set; }

    protected override void OnParametersSet()
    {
        if (Artista is null)
        {
            Imagem = "https://via.placeholder.com/150";
            return;
        }

        var urlApi = Configuration["APIServer:Url"] ?? "https://localhost:7083";
        
        if (!string.IsNullOrWhiteSpace(Artista.FotoPerfil) && 
            Artista.FotoPerfil.StartsWith("/fotosPerfil/"))
        {
            Imagem = $"{urlApi}{Artista.FotoPerfil}";
        }
        else
        {
            Imagem = "https://via.placeholder.com/150";
        }
    }
}